---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'workbench'>;
}

const { project } = Astro.props;
const { slug, data } = project;
---
<a 
  href={`/workbench/${slug}`} 
  class="block bg-slate-50 dark:bg-slate-800 rounded-2xl shadow-md hover:shadow-xl dark:hover:shadow-blue-500/20 transition-all duration-300 overflow-hidden group border border-slate-200 dark:border-slate-700"
>
  <div class="overflow-hidden">
    <img
      src={data.heroImage}
      alt={`Screenshot of ${data.title}`}
      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
      transition:name={`hero-${slug}`}
    />
  </div>

  <div class="p-6">
    <h3 
      class="text-2xl font-bold text-slate-900 dark:text-white mb-2"
      transition:name={`title-${slug}`}
    >
      {data.title}
    </h3>
    <p class="text-lg text-slate-600 dark:text-slate-300 mb-4">
      {data.subtitle}
    </p>

    <div class="flex flex-wrap gap-2">
      {data.techStack.map((tech) => (
        <span class="text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 py-1 px-3 rounded-full">
          {tech}
        </span>
      ))}
    </div>
  </div>
</a>