---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import WorkbenchCard from '../../components/WorkbenchCard.astro';

const allProjects = await getCollection('workbench');
const projects = allProjects.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Workbench :: Collins">
  <main class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-slate-900 to-purple-600 dark:from-white dark:to-purple-400 bg-clip-text text-transparent mb-6">
        My Workbench
      </h1>
      <p class="text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
        A curated collection of my experiments, explorations, and chain-reaction projects.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <WorkbenchCard project={project} />
      ))}
    </div>

    <div class="text-center mt-16">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-slate-100 to-slate-200 dark:from-slate-800 dark:to-slate-700 text-slate-700 dark:text-slate-300 rounded-full text-sm font-medium">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        More projects coming soon
      </div>
    </div>
  </main>
</Layout>