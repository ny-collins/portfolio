---
import { getCollection } from 'astro:content';
import WorkbenchEntryLayout from '../../layouts/WorkbenchEntryLayout.astro';

export async function getStaticPaths() {
  const workbenchEntries = await getCollection('workbench');
  return workbenchEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { post: entry },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<WorkbenchEntryLayout post={post}>
  <Content />
</WorkbenchEntryLayout>